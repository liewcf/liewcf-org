---
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About | Liew CheonFong" description="About Liew CheonFong">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
				tagline="I build WordPress tools, browser extensions, and practical web experiences."
			>
				<img
					width="1553"
					height="873"
					src="/assets/at-work.jpg"
					alt="Liew CheonFong working on a project"
				/>
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
						I focus on building WordPress plugins, browser extensions, and developer utilities that
						make daily workflows smoother and more reliable.
					</p>
					<p>
						My projects usually start as small pain points and grow into tools that help teams ship
						faster and communicate more clearly.
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Focus</h2>
				<div class="content">
					<p>WordPress development, productivity tooling, and practical UX improvements.</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					<p>WordPress, browser extensions, API integrations, and workflow automation.</p>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
